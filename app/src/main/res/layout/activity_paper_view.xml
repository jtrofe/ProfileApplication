<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.main.profileapplication.PaperViewActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/content"
            android:background="#7777EE"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/part_0_caption"
                style="@style/PaperViewCaption" />
            <ImageView
                android:id="@+id/part_0_drawing"
                style="@style/PaperViewDrawing" />
            <TextView
                android:id="@+id/part_1_caption"
                style="@style/PaperViewCaption" />
            <ImageView
                android:id="@+id/part_2_drawing"
                style="@style/PaperViewDrawing" />
            <TextView
                android:id="@+id/part_3_caption"
                style="@style/PaperViewCaption" />
            <ImageView
                android:id="@+id/part_4_drawing"
                style="@style/PaperViewDrawing" />
            <TextView
                android:id="@+id/part_5_caption"
                style="@style/PaperViewCaption" />
            <ImageView
                android:id="@+id/part_6_drawing"
                style="@style/PaperViewDrawing" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
